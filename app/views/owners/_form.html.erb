<%= form_for @owner, url: details_path do |f| %>

    <div class="row">
      <div class="col-md-5">

        <% if @owner.errors.any? %>
            <div id="error_explanation">
              <h2>
                Please correct the following <%= pluralize(@owner.errors.count, 'error') %>:
              </h2>
              <ul>
                <% @owner.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <div class="form-group">
          <%= f.label :name, class: 'control-label' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :postal_address, class: 'control-label' %>
          <%= f.text_area :postal_address, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :email, class: 'control-label' %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>

        <%= f.submit "Save details", class: 'btn btn-default' %>

        <% if not (defined? back_path).nil? %>
          <%= link_to 'Cancel', back_path, class: 'btn btn-default' %>
        <% end %>

      </div>
    </div>

<% end %>
