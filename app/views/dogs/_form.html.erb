<%= form_for @dog do |f| %>

  <div class="row">
    <div class="col-md-5">

      <% if @dog.errors.any? %>
        <div id="error_explanation">
          <h2>
            Please correct the following <%= pluralize(@dog.errors.count, 'error') %>:
          </h2>
          <ul>
            <% @dog.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :name, class: 'control-label' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :breed, class: 'control-label' %>
        <%= f.text_field :breed, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :date_of_birth, class: 'control-label' %>
        <%= f.date_field :date_of_birth, class: 'form-control' %>
      </div>

      <%= f.submit "Save", class: 'btn btn-default'%>

      <% if not (defined? back_path).nil? %>
          <%= link_to 'Cancel', back_path, class: 'btn btn-default' %>
      <% end %>

    </div>
  </div>
<% end %>
